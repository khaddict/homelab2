---
groups:
  - name: global
    rules:
      - alert: ExporterDown
        annotations:
          summary: "Exporter down (instance {{ $labels.instance }})"
          description: "Prometheus exporter down (value {{ $value }})"
        expr: up{instance=~".*homelab.lan"} == 0
        for: 5m
        labels:
          severity: warning

      - alert: HostOutOfMemory
        annotations:
          summary: "Host out of memory (instance {{ $labels.instance }})"
          description: "Node memory is filling up (< 10% left) (value {{ $value }})"
        expr: node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100 < 10
        for: 5m
        labels:
          severity: warning

      - alert: ComponentHot
        annotations:
          summary: "{{ $labels.chip }} is hot (instance {{ $labels.instance }})"
          description: "{{ $labels.chip }} on {{ $labels.sensor }} is hot (> 70Â°C) (value {{ $value }})"
        expr: node_hwmon_temp_celsius > 70
        for: 5m
        labels:
          severity: warning

      - alert: LoginServiceDown
        annotations:
          summary: "{{ $labels.name }} is down"
          description: "{{ $labels.name }} is not {{ $labels.state }}. Start it on {{ $labels.instance }}."
        expr: node_systemd_unit_state{instance="main.homelab.lan", job="node", name="login.service", state="active"} != 1
        for: 3m
        labels:
          severity: warning

      - alert: SSHUnreachable
        annotations:
          summary: "SSH unreachable (instance {{ $labels.instance }})"
          description: "SSH is unreachable on $labels.instance (value {{ $value }})"
        expr: probe_success{job="blackbox_ssh_banner"} == 1
        for: 3m
        labels:
          severity: warning

      - alert: ICMPUnreachable
        annotations:
          summary: "ICMP unreachable (instance {{ $labels.instance }})"
          description: "ICMP is unreachable on $labels.instance (value {{ $value }})"
        expr: probe_success{job="blackbox_icmp"} == 1
        for: 3m
        labels:
          severity: warning
